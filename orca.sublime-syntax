%YAML 1.2
---
name: ORCA
file_extensions:
  - inp
scope: text.orca

contexts:
  main:
    - match: |-
        (?ix)^%\b(
          autoci
        | basis
        | casscf
        | cim
        | cipsi
        | cis
        | coords
        | cpcm
        | elprop
        | eprnmr
        | freq
        | geom
        | irc
        | loc
        | md(ci)?
        | method
        | mp2
        | mrcc
        | mrci
        | nbo
        | numgrad
        | output
        | pal
        | paras
        | plots
        | rel
        | rocis
        | rr
        | scf
        )\b
      scope: variable.function.orca
      push:
        - include: comments
        - match: |-
            (?ix)\b(
              density
            | diismaxeq
            | directresetfreq
            | guess(mode)?
            | hess_filename
            | inithess
            | maxiter
            | moinp
            | nbokeylist
            | nlb
            | nprocs
            | optimizehydrogens
            | scale_init_displ
            )\b
          scope: keyword.orca
        - match: (?i)print *\[[^\[\]]*\]
          scope: keyword.orca
        - match: (?i)^end$
          scope: variable.function.orca
          pop: true
    - match: (?i)^%\b(moinp|maxcore)\b
      scope: keyword.orca
    - match: (?i)^\* *\b(xyz|int|internal|gzmt)\b
      scope: variable.function.orca
      push:
        - match: |-
            (?x)\b(
               H | He | Li | Be |  B |  C |  N |  O |  F | Ne | Na | Mg | Al
            | Si |  P |  S | Cl | Ar |  K | Ca | Sc | Ti |  V | Cr | Mn | Fe
            | Co | Ni | Cu | Zn | Ga | Ge | As | Se | Br | Kr | Rb | Sr |  Y
            | Zr | Nb | Mo | Tc | Ru | Rh | Pd | Ag | Cd | In | Sn | Sb | Te
            |  I | Xe | Cs | Ba | La | Ce | Pr | Nd | Pm | Sm | Eu | Gd | Tb
            | Dy | Ho | Er | Tm | Yb | Lu | Hf | Ta |  W | Re | Os | Ir | Pt
            | Au | Hg | Tl | Pb | Bi | Po | At | Rn | Fr | Ra | Ac | Th | Pa
            |  U | Np | Pu | Am | Cm | Bk | Cf | Es | Fm | Md | No | Lr | Rf
            | Db | Sg | Bh | Hs | Mt | Ds | Rg | Cn | Nh | Fl | Mc | Lv | Ts
            | Og
            )\b
          scope: string.orca
        - match: ^\*$
          scope: variable.function.orca
          pop: true
    - match: (?i)^\* *\b(xyz|gzmt)file\b
      scope: variable.function.orca
    - match: ^!
      scope: variable.function.orca
      push:
        - match: |-
            (?ix)\b(
              6-311++g**
            | 6-31g**
            | autoaux
            | b97-3c
            | d4
            | def2-qzvpp
            | def2-tzvp(/c)?
            | def2-tzvpp(/c)?
            | def2/j
            | dlpno-ccsd\(t\)
            | finalgrid6
            | freq
            | grid5
            | irc
            | moread
            | nbo
            | nl
            | nodamp
            | nolshift
            | normalprint
            | numfreq
            | numgrad
            | opt(ts)?
            | pbe(h-3c)?
            | pwpb95
            | rhf
            | rijcosx
            | slowconv
            | sp
            | tightpno
            | tightscf
            | uks
            | wb97x
            | xyzfile
            )\b
          scope: keyword.orca
        - match: $
          pop: true
    - include: comments
  comments:
    - match: \#[^\#]*$
      scope: comment.orca
    - match: \#[^\#]*\#
      scope: comment.orca

# vim:ft=yaml
